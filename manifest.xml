<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<OfficeApp xmlns="http://schemas.microsoft.com/office/appforoffice/1.1"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xmlns:bt="http://schemas.microsoft.com/office/officeappbasictypes/1.0"
           xsi:type="MailApp">

  <Id>e61470c5-e3b6-484f-825b-b3ff55e89c6f</Id>
  <Version>1.0.0.2</Version>
  <ProviderName>BVH</ProviderName>
  <DefaultLocale>en-US</DefaultLocale>

  <DisplayName DefaultValue="BVH Import"/>
  <Description DefaultValue="Importiert Daten beim Lesen und Erstellen von E-Mails."/>

  <IconUrl DefaultValue="https://danielhdevelope.github.io/bvh_outlook_import/assets/icon-64.png"/>
  <HighResolutionIconUrl DefaultValue="https://danielhdevelope.github.io/bvh_outlook_import/assets/icon-128.png"/>
  <SupportUrl DefaultValue="https://danielhdevelope.github.io/bvh_outlook_import/"/>

  <AppDomains>
    <AppDomain>https://danielhdevelope.github.io</AppDomain>
    <AppDomain>https://file.unionbau.it</AppDomain>
  </AppDomains>

  <Hosts>
    <Host Name="Mailbox"/>
  </Hosts>

  <Requirements>
    <Sets>
      <Set Name="Mailbox" MinVersion="1.5"/>
    </Sets>
  </Requirements>

  <Permissions>ReadWriteItem</Permissions>

  <!-- WICHTIG: Compose + Read -->
  <Rule xsi:type="RuleCollection" Mode="Or">
    <Rule xsi:type="ItemIs" ItemType="Message" FormType="Read"/>
    <Rule xsi:type="ItemIs" ItemType="Message" FormType="Edit"/>
  </Rule>

